<div class="centercontainer responsesdiv">
    <div class="centerrowfeeds">
        <div class="centercolumnfeeds">
        	<div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Edit Your Response</h2>
                </div>
                <div class="panel-body">
                    <%= form_for [@parent, @response] do |f| %>
        				<div class="form-group">
        					<%= f.bootsy_area :body, class:"form-control", rows: "7", placeholder: "Write your response here.", editor_options: { image: false, font_styles: false, color: false } %>
        				</div>
        				<div class="form-group">
        					<%= f.submit class: "btn btn-danger btn-block" %>
						</div>    				
    				<% end %>
                </div>
                <div class="panel-footer">
                    <%= link_to 'Back', :back %>
                </div>
            </div>
        </div>
    </div>
</div>